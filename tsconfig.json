{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "declaration": false,
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*",
            "src/types/*"
         ]
      },
      "types" : ["node"]
   },
   "include": ["src/**/*"]
}